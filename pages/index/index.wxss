.item {
  width: 50%;
  text-align: center;
  float: left;
}

.item image {
  width: 90%;
  height: 150px;
  margin: 10px;
}

.empty {
  width: 100%;
  height: 600rpx;
  text-align: center;
  line-height: 600rpx;
}

.loading {
  padding: 10rpx;
  text-align: center;
  margin-top: 10px;
}

.loading:before {
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  background: url("data:image/png;base64,") no-repeat;
  background-size: contain;
  animation: rotate 1s linear infinite;
}

.loading.complete:before {
  display: none;
}

.search-bar {
  flex: none;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f4f4f4;
}

.search-wrap {
  position: relative;
  flex: auto;
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 0 20rpx;
  background: #fff;
  border-radius: 6rpx;
}

.search-wrap .icon-search {
  margin-right: 10rpx;
}

.search-wrap .search-input {
  flex: auto;
  font-size: 28rpx;
}

.search-cancel {
  padding: 0 20rpx;
  font-size: 28rpx;
}

.top_icon {
  position: fixed;
  width: 40px;
  height: 40px;
  bottom: 30px;
  right: 20px;
  border: 1px solid rgb(90, 88, 85);
  border-radius: 20px;
}
